<odoo>
    <data>
        <template id="add_supplier_registration_button_homepage" inherit_id="website.layout" name="Add Supplier Registration Button to Homepage">
            <xpath expr="//main" position="inside">
                <t t-if="request.httprequest.path == '/'">
                    <div class="container text-center my-5">
                        <a href="/my/supplier" class="btn btn-primary btn-lg">Register as a Supplier</a>
                    </div>
                </t>
            </xpath>
        </template>

        <template id="supplier_page_template">
            <t t-call="website.layout">
                <div class="container mt-5">
                    <h1 class="text-center mb-4 text-uppercase text-primary">Supplier Registration</h1>
                    <div class="card shadow-sm rounded bg-white p-4">
                        <form method="POST" action="/my/supplier/check">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                            <div class="mb-3 text-center">
                                <label class="form-label fw-bold fs-4 text-primary">Do you Sign in or Sign up?</label>
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Next</button>
                        </form>
                    </div>
                </div>
            </t>
        </template>

        <template id="supplier_mail_template">
            <t t-call="website.layout">
                <div class="container mt-5">
                    <h1 class="text-center mb-4 text-uppercase text-primary">Supplier Mail Check</h1>

                    <!-- Display Error Message -->
                    <t t-if="error">
                        <div class="alert alert-danger text-center" role="alert">
                            <t t-esc="error" />
                        </div>
                    </t>

                    <!-- Email Input Form -->
                    <div class="card shadow-sm rounded bg-white p-4">
                        <form method="POST" action="/my/supplier/check">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                            <div class="mb-3 text-center">
                                <label class="form-label fw-bold fs-4 text-primary">Enter Your Email</label>
                                <input type="email" name="email" class="form-control mt-3" placeholder="Enter your email"/>
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Next</button>
                        </form>
                    </div>
                </div>
            </t>
        </template>

        <template id="otp_verification_template">
            <t t-call="website.layout">
                <div class="container mt-5">
                    <h1 class="text-center mb-4 text-uppercase text-primary">OTP Verification</h1>

                    <t t-if="error">
                        <div class="alert alert-danger" role="alert">
                            <t t-esc="error" />
                        </div>
                    </t>
                    <t t-if="success">
                        <div class="alert alert-success" role="alert">
                            <t t-esc="success" />
                        </div>
                    </t>

                    <div class="card shadow-sm rounded bg-white p-4">
                        <!-- Form to Submit Email -->
                        <form method="POST" action="/my/otp/send">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                            <div class="mb-3">
                                <label class="form-label">Email</label>
                                <input type="email" name="email" class="form-control" placeholder="Enter your email"/>
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Send OTP</button>
                        </form>

                        <!-- OTP Verification Section -->
                        <t t-if="show_otp_section">
                            <form method="POST" action="/my/otp/verify" class="mt-4">
                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                <input type="hidden" name="email" t-att-value="email"/>
                                <div class="mb-3">
                                    <label class="form-label">Enter OTP</label>
                                    <input type="text" name="otp" class="form-control" placeholder="Enter OTP"/>
                                </div>
                                <button type="submit" class="btn btn-success w-100 mt-2">Verify OTP</button>
                            </form>
                        </t>
                    </div>
                </div>
            </t>
        </template>

        <template id="supplier_registration_form_template">
            <t t-call="website.layout">
                <style>
                    label[for]:after {
                        content: " *";
                        color: red;
                        font-weight: bold;
                    }

                    .required-message {
                        font-size: 14px;
                        font-weight: bold;
                        color: red;
                    }
                    .hidden {
                        display: none !important; /* This makes fields un-focusable */
                    }

                    .visible {
                        display: block;
                    }
                </style>
                <div class="container mt-5">
                    <h1 class="text-center mb-4 text-uppercase text-primary">Supplier Registration Form</h1>

                    <form id="multi-step-form" method="POST" action="/my/supplier/form/submit" enctype="multipart/form-data">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                        <div class="alert alert-warning text-center" role="alert">
                            <strong>Fields with <span style="color: red;">*</span> must be filled to submit the form.</strong>
                        </div>

                        <!-- Step 1: Company Information -->
                        <div class="form-step" id="step-1">
                            <div class="card shadow-sm p-4 mb-4 bg-white rounded">
                                <div class="card-header bg-primary text-white text-center">
                                    <h3 class="mb-0">Section 1: Supplier Company Information</h3>
                                </div>
                                <div class="card-body">
                                    <div class="mb-3">
                                        <label for="company_name" class="form-label">Company Name</label>
                                        <input type="text" name="company_name" class="form-control" placeholder="Enter Company Name" required=""/>
                                        <div class="invalid-feedback">Company Name is required.</div>
                                    </div>
                                    <div class="mb-3">
                                        <label for="company_address" class="form-label o_required">Company Address</label>
                                        <input type="text" name="company_address" class="form-control" placeholder="Enter Company Address" required=""/>
                                        <div class="invalid-feedback">Company Address is required.</div>
                                    </div>
                                    <div class="mb-3">
                                        <label for="company_type" class="form-label o_required">Company Type</label>
                                        <select name="company_type" class="form-select" required="">
                                            <option value="">Select your company type</option>
                                            <option value="sole_proprietorship">Sole Proprietorship</option>
                                            <option value="partnership">Partnership</option>
                                            <option value="llc">Limited Liability Company (LLC)</option>
                                            <option value="corporation">Corporation</option>
                                            <option value="s_corporation">S Corporation</option>
                                            <option value="cooperative">Cooperative</option>
                                            <option value="non_profit">Non-Profit Organization</option>
                                            <option value="government_agency">Government Agency</option>
                                            <option value="joint_venture">Joint Venture</option>
                                            <option value="holding_company">Holding Company</option>
                                            <option value="private_limited">Private Limited Company</option>
                                            <option value="public_limited">Public Limited Company</option>
                                        </select>
                                        <div class="invalid-feedback">Company Type is required.</div>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Company Logo</label>
                                        <input type="file" name="company_logo" class="form-control" />
                                    </div>
                                </div>

                                <!-- Primary Contact Section -->
                                <div class="border rounded p-3 mb-4">
                                    <h4 class="text-primary">Primary Contact</h4>
                                    <div class="mb-3">
                                        <label for="primary_contact_name" class="form-label">Name</label>
                                        <input type="text" name="primary_contact_name" class="form-control" placeholder="Enter Name" required=""/>
                                        <div class="invalid-feedback">Name is required.</div>
                                    </div>
                                    <div class="mb-3">
                                        <label for="primary_contact_email" class="form-label">Email</label>
                                        <input type="email" name="primary_contact_email" class="form-control" placeholder="Enter Email" required=""/>
                                        <div class="invalid-feedback">Email is required.</div>
                                    </div>
                                    <div class="mb-3">
                                        <label for="primary_contact_phone" class="form-label">Phone</label>
                                        <input type="text" name="primary_contact_phone" class="form-control" placeholder="Enter Phone Number" required=""/>
                                        <div class="invalid-feedback">Phone is required.</div>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Address</label>
                                        <input type="text" name="primary_contact_address" class="form-control" placeholder="Enter Address"/>
                                    </div>
                                </div>

                                <!-- Financial Contact Section -->
                                <div class="border rounded p-3 mb-4">
                                    <h4 class="text-success">Financial Contact</h4>
                                    <div class="mb-3">
                                        <label for="finance_contact_name" class="form-label">Name</label>
                                        <input type="text" name="finance_contact_name" class="form-control" placeholder="Enter Name" required=""/>
                                        <div class="invalid-feedback">Name is required.</div>
                                    </div>
                                    <div class="mb-3">
                                        <label for="finance_contact_email" class="form-label">Email</label>
                                        <input type="email" name="finance_contact_email" class="form-control" placeholder="Enter Email" required=""/>
                                        <div class="invalid-feedback">Email is required.</div>
                                    </div>
                                    <div class="mb-3">
                                        <label for="finance_contact_phone" class="form-label">Phone</label>
                                        <input type="text" name="finance_contact_phone" class="form-control" placeholder="Enter Phone Number" required=""/>
                                        <div class="invalid-feedback">Phone is required.</div>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Address</label>
                                        <input type="text" name="finance_contact_address" class="form-control" placeholder="Enter Address"/>
                                    </div>
                                </div>

                                <!-- Authorized Contact Section -->
                                <div class="border rounded p-3 mb-4">
                                    <h4 class="text-danger">Authorized Contact</h4>
                                    <div class="mb-3">
                                        <label for="authorized_contact_name" class="form-label">Name</label>
                                        <input type="text" name="authorized_contact_name" class="form-control" placeholder="Enter Name" required=""/>
                                        <div class="invalid-feedback">Name is required.</div>
                                    </div>
                                    <div class="mb-3">
                                        <label for="authorized_contact_email" class="form-label">Email</label>
                                        <input type="email" name="authorized_contact_email" class="form-control" placeholder="Enter Email" required=""/>
                                        <div class="invalid-feedback">Email is required.</div>
                                    </div>
                                    <div class="mb-3">
                                        <label for="authorized_contact_phone" class="form-label">Phone</label>
                                        <input type="text" name="authorized_contact_phone" class="form-control" placeholder="Enter Phone Number" required=""/>
                                        <div class="invalid-feedback">Phone is required.</div>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Address</label>
                                        <input type="text" name="authorized_contact_address" class="form-control" placeholder="Enter Address"/>
                                    </div>
                                </div>
                            </div>

                            <div class="border rounded p-3 mb-4">
                                <h4 class="text-primary">Additional Information</h4>
                                <div class="mb-3">
                                    <label class="form-label">Trade License Number</label>
                                    <input type="text" name="trade_license_no" class="form-control" placeholder="Enter Trade License Number:"/>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Commencement Date</label>
                                    <input type="text" name="commencement_date" class="form-control" placeholder="Enter Commencement Date"/>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Expiry Date</label>
                                    <input type="text" name="expiry_date" class="form-control" placeholder="Enter Expiry Date"/>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Tax Identification Number (TIN)</label>
                                    <input type="text" name="tax_id_num" class="form-control" placeholder="Enter Tax Identification Number (TIN)"/>
                                </div>
                            </div>

                            <!-- Enhanced Next Button -->
                            <button type="button" class="btn btn-lg btn-primary w-100 shadow-sm" id="next-1">Next <i class="fas fa-arrow-right"></i></button>
                        </div>

                        <!-- Step 2: Financial Information -->
                        <div class="form-step" id="step-2" style="display: none;">
                            <div class="card shadow-lg p-4 mb-4 bg-white rounded border border-primary">
                                <div class="card-header bg-primary text-white text-center">
                                    <h3 class="mb-0">Section 2: Financial Information</h3>
                                </div>
                                <div class="card-body">

                                    <div class="border rounded p-4 mb-4 bg-light shadow-sm">
                                        <h5 class="text-primary fw-bold">🏦 Bank Details</h5>
                                        <div class="mb-3">
                                            <label for="bank_name" class="form-label fw-semibold">Bank Name</label>
                                            <input type="text" name="bank_name" class="form-control shadow-sm" placeholder="Enter Bank Name" required=""/>
                                            <div class="invalid-feedback">Bank Name is required.</div>
                                        </div>
                                        <div class="mb-3">
                                            <label for="bank_address" class="form-label fw-semibold">Bank Address</label>
                                            <input type="text" name="bank_address" class="form-control shadow-sm" placeholder="Enter Bank Address" required=""/>
                                            <div class="invalid-feedback">Bank Address is required.</div>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label fw-semibold">Bank SWIFT Code</label>
                                            <input type="text" name="bank_swift_code" class="form-control shadow-sm" placeholder="Enter Bank SWIFT Code" />
                                        </div>
                                    </div>

                                    <div class="border rounded p-4 mb-4 bg-light shadow-sm">
                                        <h5 class="text-success fw-bold">💳 Account Details</h5>
                                        <div class="mb-3">
                                            <label class="form-label fw-semibold">Account Name</label>
                                            <input type="text" name="account_name" class="form-control shadow-sm" placeholder="Enter Account Name" />
                                        </div>
                                        <div class="mb-3">
                                            <label for="account_number" class="form-label fw-semibold">Account Number</label>
                                            <input type="text" name="account_number" class="form-control shadow-sm" placeholder="Enter Account Number" required=""/>
                                            <div class="invalid-feedback">Account Number is required.</div>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label fw-semibold">IBAN</label>
                                            <input type="text" name="iban" class="form-control shadow-sm" placeholder="Enter IBAN" />
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="d-flex justify-content-between mt-3">
                                <button type="button" class="btn btn-lg btn-outline-primary shadow-sm px-4 py-2" id="prev-2"><i class="fas fa-arrow-left"></i> Previous</button>
                                <button type="button" class="btn btn-lg btn-primary shadow-lg px-4 py-2" id="next-2">Next <i class="fas fa-arrow-right"></i></button>
                            </div>
                        </div>


                        <!-- Step 3: Previous Client References -->
                        <div class="form-step" id="step-3" style="display: none;">
                            <div class="card shadow-lg p-4 mb-4 bg-white rounded border border-primary">
                                <div class="card-header bg-primary text-white text-center">
                                    <h3 class="mb-0">Section 3: Previous Client References</h3>
                                </div>
                                <div class="card-body">

                                    <div class="border rounded p-4 mb-4 bg-light shadow-sm">
                                        <h5 class="text-primary fw-bold">👤 Client 1</h5>
                                        <div class="mb-3">
                                            <label class="form-label fw-semibold">Name</label>
                                            <input type="text" name="client_1_name" class="form-control shadow-sm" placeholder="Enter Name"/>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label fw-semibold">Email</label>
                                            <input type="email" name="client_1_email" class="form-control shadow-sm" placeholder="Enter Email" />
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label fw-semibold">Phone</label>
                                            <input type="text" name="client_1_phone" class="form-control shadow-sm" placeholder="Enter Phone" />
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label fw-semibold">Address</label>
                                            <input type="text" name="client_1_address" class="form-control shadow-sm" placeholder="Enter Address" />
                                        </div>
                                    </div>

                                    <div class="border rounded p-4 mb-4 bg-light shadow-sm">
                                        <h5 class="text-success fw-bold">👤 Client 2</h5>
                                        <div class="mb-3">
                                            <label class="form-label fw-semibold">Name</label>
                                            <input type="text" name="client_2_name" class="form-control shadow-sm" placeholder="Enter Name" />
                                            <div class="invalid-feedback">Name is required.</div>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label fw-semibold">Email</label>
                                            <input type="email" name="client_2_email" class="form-control shadow-sm" placeholder="Enter Email" />
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label fw-semibold">Phone</label>
                                            <input type="text" name="client_2_phone" class="form-control shadow-sm" placeholder="Enter Phone" />
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label fw-semibold">Address</label>
                                            <input type="text" name="client_2_address" class="form-control shadow-sm" placeholder="Enter Address" />
                                        </div>
                                    </div>

                                    <div class="border rounded p-4 mb-4 bg-light shadow-sm">
                                        <h5 class="text-danger fw-bold">👤 Client 3</h5>
                                        <div class="mb-3">
                                            <label class="form-label fw-semibold">Name</label>
                                            <input type="text" name="client_3_name" class="form-control shadow-sm" placeholder="Enter Name" />
                                            <div class="invalid-feedback">Name is required.</div>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label fw-semibold">Email</label>
                                            <input type="email" name="client_3_email" class="form-control shadow-sm" placeholder="Enter Email" />
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label fw-semibold">Phone</label>
                                            <input type="text" name="client_3_phone" class="form-control shadow-sm" placeholder="Enter Phone" />
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label fw-semibold">Address</label>
                                            <input type="text" name="client_3_address" class="form-control shadow-sm" placeholder="Enter Address" />
                                        </div>
                                    </div>

                                    <div class="border rounded p-4 mb-4 bg-light shadow-sm">
                                        <h5 class="text-info fw-bold">👤 Client 4</h5>
                                        <div class="mb-3">
                                            <label class="form-label fw-semibold">Name</label>
                                            <input type="text" name="client_4_name" class="form-control shadow-sm" placeholder="Enter Name" />
                                            <div class="invalid-feedback">Name is required.</div>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label fw-semibold">Email</label>
                                            <input type="email" name="client_4_email" class="form-control shadow-sm" placeholder="Enter Email" />
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label fw-semibold">Phone</label>
                                            <input type="text" name="client_4_phone" class="form-control shadow-sm" placeholder="Enter Phone" />
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label fw-semibold">Address</label>
                                            <input type="text" name="client_4_address" class="form-control shadow-sm" placeholder="Enter Address" />
                                        </div>
                                    </div>

                                    <div class="border rounded p-4 mb-4 bg-light shadow-sm">
                                        <h5 class="text-warning fw-bold">👤 Client 5</h5>
                                        <div class="mb-3">
                                            <label class="form-label fw-semibold">Name</label>
                                            <input type="text" name="client_5_name" class="form-control shadow-sm" placeholder="Enter Name" />
                                            <div class="invalid-feedback">Name is required.</div>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label fw-semibold">Email</label>
                                            <input type="email" name="client_5_email" class="form-control shadow-sm" placeholder="Enter Email" />
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label fw-semibold">Phone</label>
                                            <input type="text" name="client_5_phone" class="form-control shadow-sm" placeholder="Enter Phone" />
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label fw-semibold">Address</label>
                                            <input type="text" name="client_5_address" class="form-control shadow-sm" placeholder="Enter Address" />
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="d-flex justify-content-between mt-3">
                                <button type="button" class="btn btn-lg btn-outline-primary shadow-sm px-4 py-2" id="prev-3"><i class="fas fa-arrow-left"></i> Previous</button>
                                <button type="button" class="btn btn-lg btn-primary shadow-lg px-4 py-2" id="next-3">Next <i class="fas fa-arrow-right"></i></button>
                            </div>
                        </div>


                        <!-- Step 4: Certifications -->
                        <div class="form-step" id="step-4" style="display: none;">
                            <div class="card shadow-lg p-4 mb-4 bg-white rounded border border-primary">
                                <div class="card-header bg-primary text-white text-center">
                                    <h3 class="mb-0">Section 4: Certifications</h3>
                                </div>
                                <div class="card-body">
                                    <div class="border rounded p-4 mb-4 bg-light shadow-sm">
                                        <h5 class="text-primary fw-bold">📜 Certification Details</h5>
                                        <div class="mb-3">
                                            <label for="certification_name" class="form-label fw-semibold">Certification Name</label>
                                            <input type="text" name="certification_name" class="form-control shadow-sm" placeholder="Enter Certification Name" required=""/>
                                            <div class="invalid-feedback">Certification Name is required.</div>
                                        </div>
                                        <div class="mb-3">
                                            <label for="certificate_number" class="form-label fw-semibold">Certification Number</label>
                                            <input type="text" name="certificate_number" class="form-control shadow-sm" placeholder="Enter Certification Number" required=""/>
                                            <div class="invalid-feedback">Certification Number is required.</div>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label fw-semibold">Certifying Body</label>
                                            <input type="text" name="certifying_body" class="form-control shadow-sm" placeholder="Enter Certifying Body" />
                                        </div>
                                    </div>

                                    <div class="border rounded p-4 mb-4 bg-light shadow-sm">
                                        <h5 class="text-success fw-bold">📅 Certification Dates</h5>
                                        <div class="mb-3">
                                            <label class="form-label fw-semibold">Award Date</label>
                                            <input type="date" name="award_date" class="form-control shadow-sm" />
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label fw-semibold">Expiry Date</label>
                                            <input type="date" name="certificate_expiry_date" class="form-control shadow-sm" />
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="d-flex justify-content-between mt-3">
                                <button type="button" class="btn btn-lg btn-outline-primary shadow-sm px-4 py-2" id="prev-4"><i class="fas fa-arrow-left"></i> Previous</button>
                                <button type="button" class="btn btn-lg btn-primary shadow-lg px-4 py-2" id="next-4">Next <i class="fas fa-arrow-right"></i></button>
                            </div>
                        </div>


                        <div class="form-step" id="step-5" style="display: none;">
                            <div class="card shadow-lg p-4 mb-4 bg-white rounded border border-primary">
                                <div class="card-header bg-primary text-white text-center">
                                    <h3 class="mb-0">Section 5: Document Submission</h3>
                                </div>
                                <div class="card-body">
                                    <div class="border rounded p-4 mb-4 bg-light shadow-sm">
                                        <h5 class="text-primary fw-bold">📂 Required Documents</h5>
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label class="form-label fw-semibold">Trade License / Business Registration</label>
                                                <input type="file" name="trade_license_business_registration" class="form-control shadow-sm"/>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label class="form-label fw-semibold">Certificate of Incorporation</label>
                                                <input type="file" name="certificate_of_incorporation" class="form-control shadow-sm"/>
                                            </div>
